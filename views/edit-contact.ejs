<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (contact) { %>
        <form class="add-contact-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= contact.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" id="email" value="<%= contact.email %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="phone">Phone</label>
                    <input type="phone" class="form-control" name="phone" id="phone" placeholder="Phone" value="<%= contact.phone %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update contact</button>
        </form>
    <% } else { %>
        <p class="text-center">Contact Not Found. Go <a href="/add">here</a> to add contacts.</p>
    <% } %>
</div>
</div>
</body>
</html>